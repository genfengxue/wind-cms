<div class="container">
	<h1>Lesson Upload</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if lessonSubmitted}}
			<h3>Lesson is creating. Please wait for a moment then check it out.</h3>
			<a href="/lesson">再建一个</a>
			{{else}}
			<form method="post">
				<input type="hidden" name="id" value="{{formData.id}}">
				<input type="hidden" name="action" value="lesson">
				<div class="form-group {{#if validationErrors.courseNo}}has-error{{/if}}">
					<label>课程编号</label>
					<input type="number" name="courseNo"  class="form-control" value="{{formData.courseNo}}">
				</div>
				<div class="form-group {{#if validationErrors.lessonNo}}has-error{{/if}}">
					<label>课时编号</label>
					<input type="number" name="lessonNo" class="form-control" value="{{formData.lessonNo}}">
				</div>
				<div class="form-group {{#if validationErrors.englishTitle}}has-error{{/if}}">
					<label>英文标题</label>
					<input type="text" name="englishTitle" class="form-control" value="{{formData.englishTitle}}">
				</div>
				<div class="form-group {{#if validationErrors.chineseTitle}}has-error{{/if}}">
					<label>中文标题</label>
					<input type="text" name="chineseTitle" class="form-control" value="{{formData.chineseTitle}}">
				</div>
				<div class="form-group {{#if validationErrors.audio}}has-error{{/if}}">
					<label>音频文件</label>
					<input type="file" name="audio" class="form-control" value="{{formData.audio}}">
				</div>
				<div class="form-group {{#if validationErrors.subtitle}}has-error{{/if}}">
					<label>字幕文件</label>
					<input type="file" name="subtitle" class="form-control" value="{{formData.subtitle}}">
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>
