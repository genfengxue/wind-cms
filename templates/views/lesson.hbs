<div class="container">
	<h1>转化课时</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if lessonSubmitted}}
			<h3>Lesson is processing. Please wait for a moment then check it out.</h3>
			<a href="/lesson">再转一个</a>
			{{else}}
			{{#if runningTask}}
			<div>正在转化 {{runningTask.courseNo}} - {{runningTask.lessonNo}}</div>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="lesson">
				<div class="form-group {{#if validationErrors.courseNo}}has-error{{/if}}">
					<label>课程编号</label>
					<input type="number" name="courseNo"  class="form-control" value="{{formData.courseNo}}">
				</div>
				<div class="form-group {{#if validationErrors.lessonNo}}has-error{{/if}}">
					<label>课时编号</label>
					<input type="number" name="lessonNo" class="form-control" value="{{formData.lessonNo}}">
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</form>
			{{/if}}
			{{/if}}
		</div>
	</div>
</div>
